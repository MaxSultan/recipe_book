<h1>Ingredients</h1>

<h2>All Ingredients</h2>
<ul>
    <% @ingredients.each do |ingredient| %>
        <li><%= ingredient.name %> <%= button_to 'Add ingredient to pantry', add_to_pantry_path(ingredient_id: ingredient.id) if @my_ingredients.exclude?(ingredient)%></li>
    <% end %>
</ul>

<h2>My Pantry</h2>
<ul>
    <% @my_ingredients.each do |ingredient| %>
        <li><%= ingredient.name %> <%= button_to 'Remove from pantry', ingredient_path(ingredient), method: :delete %></li>
    <% end %>
    <%= link_to "Add an ingredient", new_ingredient_path %>
</ul>