<h1>New Ingredient</h1>

<%= form_with model: @ingredient, html: {class: 'flex flex-col gap-4 p-4 bg-gray-100 border-gray-400 text-gray-700 border rounded'} do |form| %>
    <% if @ingredient.errors.any? %>
        <% @ingredient.errors.full_messages.each do |message| %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 m-4 rounded relative" role="alert">
                <%= message %>
            </div>
        <% end %>
    <% end %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.submit "Add Ingredient", class:'mt-8 pointer-events-auto rounded-md px-4 py-2 text-center font-medium shadow-sm ring-1 ring-slate-700/10 hover:bg-slate-50' %>
<% end %>